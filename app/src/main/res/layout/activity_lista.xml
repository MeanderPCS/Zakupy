<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- RecyclerView to display records -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ListarecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/buttonWroc"
            android:layout_below="@+id/ListaButtonsContainer"
            tools:ignore="NotSibling" />

        <!-- Container for Add, Delete, Compile buttons -->
        <LinearLayout
            android:id="@+id/ListaButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <!-- Add button -->
            <Button
                android:id="@+id/buttonWroc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/powr" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>